# Configurações do banco de dados
# DATABASE_URL: URL de conexão SQLAlchemy para o banco de dados
# Padrão: sqlite:///./memoria_civica.db (arquivo local)
# Para PostgreSQL: postgresql://user:password@localhost/dbname
# Para MySQL: mysql+pymysql://user:password@localhost/dbname
DATABASE_URL=sqlite:///./memoria_civica.db

# Diretório contendo arquivos CSV da Câmara dos Deputados
# Padrão: ./data/dados_camara
DATA_DIR=./data/dados_camara

# Nível de logging: DEBUG, INFO, WARNING, ERROR, CRITICAL
# Padrão: INFO
LOG_LEVEL=INFO

# Arquivo de log (opcional, desabilita se vazio)
# Padrão: vazio (nenhum arquivo de log)
# Exemplo: ./logs/etl.log
LOG_FILE=
